<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivProfleImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/placeholder"
        android:layout_alignTop="@+id/tvName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivProfleImage"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/tvName"
        android:layout_alignStart="@+id/tvName" />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:srcCompat="@drawable/twitter_logo_blue"
        android:layout_alignTop="@+id/tvName"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tvTweetContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:layout_below="@+id/ivProfleImage"
        android:layout_alignStart="@+id/ivProfleImage"
        android:layout_toStartOf="@+id/ivLogo" />

    <ImageView
        android:id="@+id/ivURLImage"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvTweetContent"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/placeholder" />

    <TextView
        android:id="@+id/tvCreatedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@+id/ivLogo"
        android:text="TextView" />
</RelativeLayout>